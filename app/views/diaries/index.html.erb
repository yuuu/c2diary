<h1>Diaries</h1>

<div class="row">
  <div class="col l8 s12">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Body</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'diary', collection: @diaries %>
      </tbody>
    </table>
    <%= paginate @diaries %>
  </div>
  <div class="col l4 s12">
    <%= render 'calendar' %>
  </div>
</div>
