<h1><%= t('.title') %></h1>

<%= render 'calendar', diaries: @calendar_diaries %>

<h2><%= t('.recent') %></h2>

<div class="row">
  <div class="col l12 s12">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Body</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'diary', collection: @diaries %>
      </tbody>
    </table>
    <%= paginate @diaries %>
  </div>
</div>
