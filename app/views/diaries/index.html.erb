<h1>Diaries</h1>

<div class="row">
  <div class="col l8 s12">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Body</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @diaries.each do |diary| %>
          <tr>
            <td><%= diary.date %></td>
            <td><%= simple_format diary.body %></td>
            <td>
              <%= link_to 'Show', diary, class: 'show-btn'  %>
              <%= link_to 'Edit', edit_diary_path(diary), class: 'edit-btn' %>
              <%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-btn' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @diaries %>
  </div>
  <div class="col l4 s12">
    <%= render 'calendar' %>
  </div>
</div>
